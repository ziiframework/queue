{
    "name": "ziiframework/queue",
    "description": "zii-framework queue extension",
    "type": "yii2-extension",
    "keywords": ["zii-framework", "queue", "extension"],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Yii Team",
            "email": "team@yiiframework.com",
            "homepage": "https://www.yiiframework.com/team"
        }
    ],
    "support": {
        "issues": "https://github.com/ziiframework/queue/issues",
        "source": "https://github.com/ziiframework/queue"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4.0",
        "ziiframework/zii": ">=3.5.1",
        "symfony/process": "^3.3||^4.0||^5.0"
    },
    "require-dev": {
        "ziiframework/redis": ">=3.2.1",
        "ziiframework/debug": ">=3.5.0",
        "ziiframework/gii": ">=3.3.0",
        "php-amqplib/php-amqplib": "*",
        "enqueue/amqp-lib": "^0.10.9",
        "pda/pheanstalk": "^3.0",
        "jeremeamia/superclosure": "*",
        "phpunit/phpunit": "~4.4",
        "aws/aws-sdk-php": ">=2.4",
        "enqueue/stomp": "^0.10.9"
    },
    "suggest": {
        "ext-pcntl": "Need for process signals.",
        "ziiframework/redis": "Need for Redis queue.",
        "pda/pheanstalk": "Need for Beanstalk queue.",
        "php-amqplib/php-amqplib": "Need for AMQP queue.",
        "enqueue/amqp-lib": "Need for AMQP interop queue.",
        "ext-gearman": "Need for Gearman queue.",
        "aws/aws-sdk-php": "Need for aws SQS.",
        "enqueue/stomp": "Need for Stomp queue."
    },
    "autoload": {
        "psr-4": {
            "yii\\queue\\": "src",
            "yii\\queue\\amqp\\": "src/drivers/amqp",
            "yii\\queue\\amqp_interop\\": "src/drivers/amqp_interop",
            "yii\\queue\\beanstalk\\": "src/drivers/beanstalk",
            "yii\\queue\\db\\": "src/drivers/db",
            "yii\\queue\\file\\": "src/drivers/file",
            "yii\\queue\\gearman\\": "src/drivers/gearman",
            "yii\\queue\\redis\\": "src/drivers/redis",
            "yii\\queue\\sync\\": "src/drivers/sync",
            "yii\\queue\\sqs\\": "src/drivers/sqs",
            "yii\\queue\\stomp\\": "src/drivers/stomp"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "scripts": {
        "redo-install": [
            "rm -rf vendor/",
            "rm -f composer.lock",
            "@composer self-update -vvv",
            "@composer install -vvv"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    }
}
